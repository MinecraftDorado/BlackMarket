<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<version>${project.parent.version}</version>
	<packaging>jar</packaging>
	<parent>
		<groupId>dev.minecraftdorado.BlackMarket</groupId>
		<artifactId>BlackMarket-parent</artifactId>
		<version>2.0.0</version>
	</parent>
	<artifactId>dist</artifactId>
	
	<build>
		<directory>../target</directory>
		<finalName>BlackMarket-${project.version}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>3.1.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>dev.minecraftdorado.BlackMarket</groupId>
			<artifactId>BlackMarket-core</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>dev.minecraftdorado.BlackMarket</groupId>
			<artifactId>BlackMarket-v1_20_R1</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
	</dependencies>
</project>